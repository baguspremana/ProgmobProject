<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:id="@+id/detail_team">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#b7b9bd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Team"
            android:textColor="#131313"
            android:layout_centerHorizontal="true"
            android:textSize="21sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="8dp"
            android:id="@+id/detail_team_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gambar_team"
            android:orientation="horizontal"
            android:layout_below="@+id/detail_team_name">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/logo_tim"
                android:src="@drawable/btn1"
                android:layout_below="@+id/detail_team_name"
                android:layout_toRightOf="@+id/foto_tim"
                android:padding="10dp"
                android:layout_weight="3"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/foto_tim"
                android:src="@drawable/btn1"
                android:layout_below="@+id/detail_team_name"
                android:padding="10dp"
                android:layout_weight="1"
                />
        </LinearLayout>


        <View
            android:id="@+id/nama_team"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:layout_below="@+id/gambar_team"/>

        <TextView
            android:id="@+id/anggota_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Team"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5px"
            android:paddingTop="15dp"
            android:layout_below="@+id/nama_team"/>

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/gambar_anggota_team_1"
            android:src="@drawable/anggota"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/anggota_team"/>

        <TextView
            android:id="@+id/anggota_tim_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Tim 1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignTop="@id/gambar_anggota_team_1"
            android:layout_toRightOf="@+id/gambar_anggota_team_1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/anggota_team"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posisi_team_1"
            android:layout_below="@id/anggota_tim_1"
            android:text="Posisi"
            android:textColor="#000"
            android:layout_toRightOf="@+id/gambar_anggota_team_1"
            android:layout_alignLeft="@id/anggota_tim_1"
            android:textSize="14sp"
            android:layout_alignBottom="@id/gambar_anggota_team_1"/>

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/gambar_anggota_team_2"
            android:src="@drawable/anggota"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/posisi_team_1"/>

        <TextView
            android:id="@+id/anggota_tim_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Tim 2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignTop="@+id/gambar_anggota_team_2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/gambar_anggota_team_2"
            android:layout_below="@+id/posisi_team_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posisi_team_2"
            android:layout_below="@id/anggota_tim_2"
            android:text="Posisi"
            android:textColor="#000"
            android:layout_alignLeft="@+id/anggota_tim_2"
            android:layout_alignBottom="@+id/gambar_anggota_team_2"
            android:layout_toRightOf="@+id/gambar_anggota_team_2"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/gambar_anggota_team_3"
            android:src="@drawable/anggota"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gambar_anggota_team_2"/>

        <TextView
            android:id="@+id/anggota_tim_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Tim 3"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignTop="@+id/gambar_anggota_team_3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gambar_anggota_team_3"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/posisi_team_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posisi_team_3"
            android:layout_below="@id/anggota_tim_3"
            android:text="Posisi"
            android:textColor="#000"
            android:layout_alignLeft="@+id/anggota_tim_3"
            android:layout_alignBottom="@+id/gambar_anggota_team_3"
            android:layout_toRightOf="@+id/gambar_anggota_team_3"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/gambar_anggota_team_4"
            android:src="@drawable/anggota"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gambar_anggota_team_3"/>

        <TextView
            android:id="@+id/anggota_tim_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Tim 4"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignTop="@+id/gambar_anggota_team_4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gambar_anggota_team_4"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/posisi_team_3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posisi_team_4"
            android:layout_below="@id/anggota_tim_4"
            android:text="Posisi"
            android:textColor="#000"
            android:layout_alignLeft="@+id/anggota_tim_4"
            android:layout_alignBottom="@+id/gambar_anggota_team_4"
            android:layout_toRightOf="@+id/gambar_anggota_team_4"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/gambar_anggota_team_5"
            android:src="@drawable/anggota"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gambar_anggota_team_4"/>

        <TextView
            android:id="@+id/anggota_tim_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Tim 5"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignTop="@+id/gambar_anggota_team_5"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/gambar_anggota_team_5"
            android:layout_below="@+id/posisi_team_4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posisi_team_5"
            android:layout_below="@id/anggota_tim_5"
            android:text="Posisi"
            android:textColor="#000"
            android:layout_alignLeft="@+id/anggota_tim_5"
            android:layout_alignBottom="@+id/gambar_anggota_team_5"
            android:layout_toRightOf="@+id/gambar_anggota_team_5"
            android:textSize="14sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>