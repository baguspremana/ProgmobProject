<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/shadow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="''Tema''"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#b7b9bd"
                android:layout_below="@id/logo"
                android:id="@+id/tema"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/user"
                android:layout_below="@id/tema"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account_circle"/>

            <EditText
                android:id="@+id/eMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail"
                android:textSize="17sp"
                android:textColor="#b7b9bd"
                android:layout_marginLeft="10dp"
                android:textColorHint="#b7b9bd"
                android:layout_toRightOf="@id/user"
                android:layout_alignTop="@id/user"
                android:inputType="textEmailAddress"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lock"
                android:id="@+id/pass"
                android:layout_below="@id/user"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/ePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="17sp"
                android:textColor="#b7b9bd"
                android:layout_marginLeft="10dp"
                android:textColorHint="#b7b9bd"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/pass"
                android:layout_below="@id/eMail"
                android:layout_alignTop="@id/pass"/>

            <Button
                android:id="@+id/signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn1"
                android:text="Sign In"
                android:textColor="#b7b9bd"
                android:layout_below="@id/ePassword"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:elevation="40dp"/>

            <TextView
                android:id="@+id/forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#b7b9bd"
                android:textSize="17sp"
                android:layout_below="@id/signIn"
                android:layout_marginTop="15dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont Have an Account?"
                android:textColor="#b7b9bd"
                android:layout_below="@id/forgot"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Register"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_below="@id/forgot"
                android:layout_toRightOf="@id/account"
                android:layout_alignTop="@id/account"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>