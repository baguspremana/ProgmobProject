<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityResetPass"
    android:background="@drawable/shadow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="''Tema''"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#b7b9bd"
                android:layout_below="@id/logo"
                android:id="@+id/tema"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/user"
                android:layout_below="@id/tema"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account_circle"
                android:layout_marginTop="70dp"/>

            <EditText
                android:id="@+id/eMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter E-Mail Address"
                android:textSize="17sp"
                android:textColor="#b7b9bd"
                android:layout_marginLeft="10dp"
                android:textColorHint="#b7b9bd"
                android:layout_toRightOf="@id/user"
                android:layout_alignTop="@id/user"
                android:inputType="textEmailAddress"/>


            <Button
                android:id="@+id/signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn1"
                android:text="Send Reset Password Link"
                android:textColor="#b7b9bd"
                android:layout_below="@id/eMail"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:elevation="40dp"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>