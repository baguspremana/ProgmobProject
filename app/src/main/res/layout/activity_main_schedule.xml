<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivityHome"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/latar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/pendaftaran">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/judul_pendaftaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendaftaran"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tgl_pendaftaran"
                        android:layout_below="@id/judul_pendaftaran"
                        android:text="3 April 2018 - 3 Mei 2018"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/tgl_pendaftaran_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_pendaftaran"
                        android:layout_below="@id/tgl_pendaftaran"
                        android:text="www.itesega.unud.ac.id, IT-ESEGA Mobile"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/lokasi_pendaftaran_iv"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_pendaftaran"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/tgl_pendaftaran_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/date_purple"
                        android:layout_below="@id/judul_pendaftaran"
                        android:layout_marginLeft="80dp" />
                    <ImageView
                        android:id="@+id/lokasi_pendaftaran_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location"
                        android:layout_below="@id/tgl_pendaftaran_iv"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/tm">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/judul_tm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Technical Meeting"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tgl_tm"
                        android:layout_below="@id/judul_tm"
                        android:text="4 Mei 2018"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tgl_tm_iv"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_tm"
                        android:layout_below="@id/tgl_tm"
                        android:text="Aula Wicwakarma, Fakultas Teknik, Universitas Udayana, Kampus Sudirman"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/lokasi_tm_iv"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_tm"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/tgl_tm_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/date_purple"
                        android:layout_below="@id/judul_tm"
                        android:layout_marginLeft="80dp" />
                    <ImageView
                        android:id="@+id/lokasi_tm_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location"
                        android:layout_below="@id/tgl_tm"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/penyisihan">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/judul_penyisihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Babak Penyisihan"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tgl_penyisihan"
                        android:layout_below="@id/judul_penyisihan"
                        android:text="13 Mei 2018 - 14 Mei 2018"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tgl_penyisihan_iv"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_penyisihan"
                        android:layout_below="@id/tgl_penyisihan"
                        android:text="Acyuta Gubug Gaming, JLn. Diponegoro, Denpasar"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/lokasi_penyisihan_iv"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_penyisihan"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/tgl_penyisihan_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/date_purple"
                        android:layout_below="@id/judul_penyisihan"
                        android:layout_marginLeft="80dp" />
                    <ImageView
                        android:id="@+id/lokasi_penyisihan_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location"
                        android:layout_below="@id/tgl_penyisihan_iv"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/semifinal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/judul_semifinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Babak Semifinal"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tgl_semifinal"
                        android:layout_below="@id/judul_semifinal"
                        android:text="21 Mei 2018"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/tgl_semifinal_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_semifinal"
                        android:layout_below="@id/tgl_semifinal"
                        android:text="Acyuta Gubug Gaming, JLn. Diponegoro, Denpasar"
                        android:textColor="#000"
                        android:layout_toRightOf="@id/lokasi_semifinal_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_semifinal"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/tgl_semifinal_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/date_purple"
                        android:layout_below="@id/judul_semifinal"
                        android:layout_marginLeft="80dp" />
                    <ImageView
                        android:id="@+id/lokasi_semifinal_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location"
                        android:layout_below="@id/tgl_semifinal_iv"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        app:itemTextColor="#000"
        app:menu="@menu/drawermenu"
        android:layout_gravity = "start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>