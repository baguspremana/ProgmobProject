<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_detail_team"
    tools:context=".MainActivityDetailTeam"
    android:background="@drawable/latar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/pendaftaran">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Team IT-ESEGA 2018"
                        android:textColor="#131313"
                        android:layout_gravity="center_horizontal"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:paddingTop="12dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="8dp"
                        android:id="@+id/detail_team_2018"/>

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="80dp"
                        android:id="@+id/logo_tim"
                        android:src="@drawable/btn1"
                        android:layout_below="@+id/detail_team_2018"
                        android:layout_toRightOf="@+id/foto_tim"
                        android:padding="10dp"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/foto_tim"
                        android:src="@drawable/btn1"
                        android:layout_below="@+id/detail_team_2018"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/nama_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Team"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_below="@+id/logo_tim"/>

                    <TextView
                        android:id="@+id/anggota_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Team"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="110dp"
                        android:layout_marginBottom="5dp"
                        android:paddingTop="15dp"
                        android:layout_below="@+id/nama_team"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambar_anggota_team_1"
                        android:src="@drawable/anggota"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/anggota_team"/>

                    <TextView
                        android:id="@+id/anggota_tim_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Tim 1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/anggota_team"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posisi_team_1"
                        android:layout_below="@id/anggota_tim_1"
                        android:text="Posisi"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambar_anggota_team_2"
                        android:src="@drawable/anggota"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/posisi_team_1"/>

                    <TextView
                        android:id="@+id/anggota_tim_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Tim 2"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/posisi_team_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posisi_team_2"
                        android:layout_below="@id/anggota_tim_2"
                        android:text="Posisi"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambar_anggota_team_3"
                        android:src="@drawable/anggota"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/gambar_anggota_team_2"/>

                    <TextView
                        android:id="@+id/anggota_tim_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Tim 3"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/posisi_team_2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posisi_team_3"
                        android:layout_below="@id/anggota_tim_3"
                        android:text="Posisi"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambar_anggota_team_4"
                        android:src="@drawable/anggota"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/gambar_anggota_team_3"/>

                    <TextView
                        android:id="@+id/anggota_tim_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Tim 4"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/posisi_team_3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posisi_team_4"
                        android:layout_below="@id/anggota_tim_4"
                        android:text="Posisi"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambar_anggota_team_5"
                        android:src="@drawable/anggota"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/gambar_anggota_team_4"/>

                    <TextView
                        android:id="@+id/anggota_tim_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota Tim 5"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/posisi_team_4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posisi_team_5"
                        android:layout_below="@id/anggota_tim_5"
                        android:text="Posisi"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="30dp"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>