<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginLeft="18dp"
    android:id="@+id/list_juara">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#b7b9bd">

        <TextView
            android:id="@+id/judul_juara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT-ESEGA 2015"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_juara"
            android:layout_below="@id/judul_juara"
            android:text="Nama Tim"
            android:textColor="#000"
            android:layout_alignLeft="@id/judul_juara"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:src="@drawable/view"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/nama_juara" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/gambar_juara"
            android:src="@drawable/tim_juara"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>