<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivityHome"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/latar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Team"
                android:textColor="#b7b9bd"
                android:layout_gravity="center_horizontal"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_margin="16dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/team1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/nama_tim_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Tim 1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/des_team_1"
                        android:layout_below="@id/nama_tim_1"
                        android:text="Lorem ipsum dolor sit amet dolor amet sit dash"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_team_2"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/team2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/nama_tim_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Tim 2"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/des_team_2"
                        android:layout_below="@id/nama_tim_2"
                        android:text="Lorem ipsum dolor sit amet dolor amet sit dash"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_team_1"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/team3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/nama_tim_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Tim 3"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/des_tim_3"
                        android:layout_below="@id/nama_tim_3"
                        android:text="Lorem ipsum dolor sit amet dolor amet sit dash"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_pendaftaran_3"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/team4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="#b7b9bd">
                    <TextView
                        android:id="@+id/nama_tim_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Tim 4"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/des_team_4"
                        android:layout_below="@id/nama_tim_4"
                        android:text="Lorem ipsum dolor sit amet dolor amet sit dash"
                        android:textColor="#000"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/gambar_team_4"
                        android:src="@drawable/daftar"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        app:itemTextColor="#000"
        app:menu="@menu/drawermenu"
        android:layout_gravity = "start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>